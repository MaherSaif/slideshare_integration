require 'rubygems'
require 'rake'
# require 'spec/rake/spectask'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "slideshare_integration"
    gem.summary = %Q{A Rails gem that streamlines interactions with the SlideShare service}
    gem.description = %Q{A Rails gem that streamlines interactions with the Slideshare service}
    gem.email = "clever.netman@gmail.com"
    gem.homepage = "http://github.com/MaherSaif/slidehare_integration"
    gem.authors = ["Maher Saif"]
    gem.add_dependency('httparty')
    # gem is a Gem::Specification... see http://www.rubygems.org/read/chapter/20 for additional settings
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: sudo gem install jeweler"
end

